<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.caoyue.contacts0.InfoActivity">

    <include
        android:id="@+id/toolbar_inInfo"
        layout="@layout/toolbar_with_back" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_inInfo"
        android:layout_marginTop="15dp"
        android:textSize="50sp"
        android:textColor="@color/colorOfDisplayName" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="8dp"
        android:textSize="30sp"
        android:textColor="@color/black" />

    <android.support.v7.widget.CardView
        android:id="@+id/delete_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="@drawable/ripple_red"
            android:text="@string/delete_contact"
            android:textSize="25sp"
            android:textColor="@color/white" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/edit_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_above="@id/delete_button"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="@string/edit_contact"
            android:background="@drawable/ripple_default"
            android:textSize="25sp"
            android:textColor="@color/black" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
